<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h3>Game Shelfはお気に入りのゲームを共有できるサービスです。</h3>
        <% unless logged_in? %>
          <%= link_to 'Game Shelfを始める', signup_path, class: 'btn btn-success btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'items/items', items: @items %>